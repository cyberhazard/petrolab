*
  margin 0
  padding 0
  box-sizing border-box
  outline: none
  text-decoration none

html
  font-size: 10px

#wrapper
  width 100%
  overflow-x: hidden

.g-wrapper
  max-width: 120rem
  margin 0 auto
  padding-left 0.6rem
  padding-right 0.6rem

.section__title
  font-family: "Arian AMU";
  font-size: 54px;
  font-weight: 700;
.graph
  width: 12.4rem
  height: 3rem
  margin-bottom 4rem
@media (max-width: 1600px)
  html
    font-size: 9px

@media (max-width: 1440px)
  html
    font-size: 8px

@media (max-width: 1280px)
  html
    font-size: 7px

@media (max-width: 1024px)
  html
    font-size: 6px

@media (max-width: 1000px)
  html
    font-size: 10px
  .g-wrapper
    max-width: 768px;
