*
  margin 0
  padding 0
  box-sizing border-box
  outline: none
  text-decoration none

html
  font-size: 10px

#wrapper
  width 100%
  overflow-x: hidden

.g-wrapper
  max-width: 120rem
  margin 0 auto
  padding-left 0.6rem
  padding-right 0.6rem

.section__title
  font-family: "Arian AMU";
  font-size: 54px;
  font-weight: 700;
.graph
  width: 12.4rem
  height: 3rem
  margin-bottom 4rem

.button
  border: none;
  z-index: 1;
  position: relative;
  outline: none;
  background-color transparent
  margin: 1.2rem 0;
  &_mini span
    font-size: 2rem
  & span
    font-family: "Arian AMU";
    font-size: 2.6rem;
    background-color: #d41e44;
    color: white;
    padding: 1.6rem 2.5rem;
    position: relative;
    cursor: pointer;
    transition: .5s;
    &:before
      content: '';
      position: absolute;
      right: -1.2rem;
      bottom: -1.2rem;
      border: 2px solid #d41e44;
      height: 50%;
      width: 50%;
      z-index: -1;
      border-top: none;
      border-left: none;
      transition: .5s;
    &:hover
      background-color: #bf1b3d;
      &:before
        width: 100%;
        height: 100%;
        border: 2px solid #d41e44;

@media (max-width: 1600px)
  html
    font-size: 9px

@media (max-width: 1440px)
  html
    font-size: 8px

@media (max-width: 1280px)
  html
    font-size: 7px

@media (max-width: 1024px)
  html
    font-size: 6px

@media (max-width: 1000px)
  html
    font-size: 10px
  .g-wrapper
    max-width: 768px;
  .button
    margin: 1rem 0;
    & span
      font-size: 2.4rem
      &:before
        right: -1rem;
        bottom: -1rem;

@media (max-width: 667px)
  .g-wrapper
    max-width: 320px;
  .button
    margin: .7rem 0;
    & span
      font-size: 1.8rem
      &:before
        right: -.7rem;
        bottom: -.7rem;
