.footer
  &__nav
    display flex
    justify-content: flex-start
    align-items: center
    padding-bottom 4.4rem
    border-bottom 2px solid white
    margin-bottom 2rem
    &_item
      color: #ffffff;
      font-family: "PT Sans";
      font-size: 2.4rem;
      font-weight: 400;
      padding-left 2.2rem
      margin-right 3rem
      position: relative
      &:before
        content ''
        left 0
        top 12px
        width 10px
        height: 10px
        background: #d41e44
        position absolute
  &__copyright
    color: #ffffff;
    font-family: "Arian AMU";
    font-size: 20px;
    font-weight 400
    & span
      font-weight 700
    & a
      display inline-block
      color: #d41e44;
      font-weight: 700;
      text-transform: uppercase;

@media (max-width:1440px)
  .footer
    &__nav
      &_item
        margin-right 1.4rem
        &:before
          top 8px
@media (max-width:1050px)
  .footer
    &__nav
      &_item
        &:before
          top 6px
@media (max-width:1024px)
  .footer
    &__nav
      &_item
        display: none
    &__copyright
      font-size 2rem
@media (max-width:566px)
  .footer
    &__copyright
      font-size 1.6rem
      & span
        display block

