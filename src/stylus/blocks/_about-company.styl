.company
  padding 5rem 0 37rem
  background-size contain
  background: url('../images/blog-top-bg.png') top center no-repeat, #FFFFFF  url('../images/contacts-bg.png') bottom center no-repeat;
  &__presentation
    display flex
    justify-content: flex-start
    align-items: center
    margin-bottom 2rem
    &_image
      max-width 10rem
      width 100%
      object-fit: cover
      margin-right 1.6rem
    &_title
      color: #d41e44;
      font-family: "Arian AMU";
      font-size: 2.6rem;
      font-weight: 700;
      text-decoration: underline;
  &__gallery
    margin-bottom 14rem

  &__item
    &_header
      display flex
      justify-content: flex-start
      align-items: flex-start
      margin-bottom 1.4rem
    &_spec
      max-width: 37.6rem
      max-height: 40rem
      object-fit: cover
    &_skills
      padding 0 0 0 2.8rem
    &_skill
      margin-bottom 1.6rem
      &:last-child
        margin-bottom 0
    &_subtitle
      color: #d41e44;
      font-family: "PT Sans";
      font-size: 2.4rem;
      font-weight: 700;
      margin-bottom 0.4rem
    &_text
      color: #2e2e2e;
      font-family: "PT Sans";
      font-size: 2rem;
      font-weight: 400;
      & span
        font-weight 700
      &-marg
        margin-bottom 1.6rem
  &__proffession
    padding 0 0 2rem 2.8rem
    position: relative
    margin-bottom 2rem
    &:after
      content ''
      width: 100%;
      height: .6rem;
      background-image: linear-gradient(to right,#5c68c3,#c63545);
      position absolute
      bottom 0
      left 0
  &__name
    color: #2e2e2e;
    font-family: "Arian AMU";
    font-size: 3rem;
    font-weight: 700;
  &__post
    color: #d41e44;
    font-family: "Arian AMU";
    font-size: 2.4rem;
    font-weight: 700;
    font-style: italic;

@media (max-width:1000px)
  .company
    &__presentation
      &_image
        max-width 8rem
      &_title
        font-size 2.4rem
    &__item
      &_header
        display block
      &_photo
        text-align: center
        margin-bottom 1rem
      &_spec
        width 100%
      &_skills
        padding 0
      &_subtitle
        font-size 1.8rem
      &_text
        font-size 1.8rem
    &__proffession
      padding: 0 0 2rem 0;
    &__name
      font-size 2.4rem
    &__post
      font-size 1.8rem
@media (max-width:667px)
  .company
    &__presentation
      &_image
        max-width 4.4rem
      &_title
        font-size 1.6rem
    &__item
      &_subtitle
        font-size 1.6rem
      &_text
        font-size 1.6rem
    &__name
      font-size 1.8rem
    &__post
      font-size 1.6rem

