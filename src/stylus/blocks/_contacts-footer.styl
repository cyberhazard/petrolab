.contacts-footer
  padding-bottom 2rem
  background #2e2e2e url('../images/footer-contacts-bg.png') bottom center no-repeat
  background-size contain
  &__form
    background: white
    padding 6rem 17rem 9rem
    max-width: 152rem
    transform: translateY(-14rem);
    width 100%
    margin: 0 auto
    margin-bottom 12rem
    &_item
      &_last
        margin-bottom 5rem
    &_title
      color: #d41e44;
      font-family: "Arian AMU";
      font-size: 36px;
      text-align: center
      margin-bottom 4rem
    &_header
      display flex
      justify-content: space-between
      align-items: center
      margin-bottom 5rem
    &_input
      width: 100%
      min-width: 50rem
      color: #2e2e2e;
      padding 0 0.2rem 1rem
      font-family: "PT Sans";
      font-size: 2.4rem;
      border none
      border-bottom 0.6rem solid #2e2e2e
    &_bottom
      text-align: center
  &__nav
    display flex
    justify-content: flex-start
    align-items: center
    padding-bottom 4.4rem
    border-bottom 2px solid white
    margin-bottom 2rem
    &_item
      color: #ffffff;
      font-family: "PT Sans";
      font-size: 24px;
      font-weight: 400;
      padding-left 2.2rem
      margin-right 3rem
      position: relative
      &:before
        content ''
        left 0
        top 12px
        width 10px
        height: 10px
        background: #d41e44
        position absolute
  &__copyright
    color: #ffffff;
    font-family: "Arian AMU";
    font-size: 20px;
    font-weight 400
    & span
      font-weight 700
    & a
      display inline-block
      color: #d41e44;
      font-weight: 700;
      text-transform: uppercase;
