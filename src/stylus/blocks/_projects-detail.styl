.projects-detail
  &__logo
    max-width 24rem
    width 100%
    object-fit: contain
    margin-bottom 3.4rem
  &__header
    display flex
    justify-content: space-between
    align-items: flex-start
    margin-bottom 2.4rem
    &_left
      width 48%
      order 1
    &_right
      width 48%
      border 8px solid black
      border-image: url(../../images/gradient-border.svg) 1;
      order 2
  &__element
    margin-bottom 2.8rem
    &_title
      font-size: 2.4rem;
      color: #d41e44;
      font-family: "Arian AMU";
      font-weight: 700;
    &_text
      color: #2e2e2e;
      font-family: "PT Sans";
      font-size: 2rem;
      font-weight 400
      &_marg
        margin-bottom 2.4rem
      &_lh
        line-height 4rem
      & span
        font-family: "Arian AMU";
        font-weight: 700;

  &__preview
    width 100%
    object-fit: cover
    vertical-align: bottom
    max-height: 40rem
  &__middle
    margin-bottom 5rem
    &_head
      margin-bottom 1rem
  &__table
    width 100%
    border-collapse: collapse
    margin-bottom 1rem
    &_tr
      &:first-child
        background: linear-gradient(45deg, #D51935, #4563D0);
      &_white
        &:first-child
          background: transparent
      &_odd
        &:nth-child(even)
          background: #EFF2FC
      &_gradient
        background: linear-gradient(45deg, #D51935, #4563D0);
    &_th
      padding 1.6rem
      color white
      font-family: "PT Sans";
      font-size: 2.4rem;
      font-weight: 700;
      text-align: left
      border 1px solid #c3c3c3
      &_black
        color black
    &_td
      padding 1.6rem
      color: #000000;
      font-family: "PT Sans";
      font-size: 2.4rem;
      font-weight: 400;
      text-align: left
      border 1px solid #c3c3c3


  &__algoritms
    &_title
      color: #d41e44;
      font-family: "Arian AMU";
      font-size: 3rem;
      font-weight: 700;
      line-height: 4.4rem;
      margin-bottom 2rem
    &_content
      display flex
      justify-content: space-between
      align-items: flex-start
    &_left
      width 64%
    &_right
      width 32%
      border 8px solid black
      border-image: url(../../images/gradient-border.svg) 1;
      padding 4rem 2rem
    &_el
      position: relative
      color: #2e2e2e;
      font-family: "PT Sans";
      font-size: 2.4rem;
      font-weight: 700;
      line-height: 3.6rem;
      padding-left 3.4rem
      margin-bottom 4rem
      &:last-child
        margin-bottom 0
      &:before
        content: ''
        left 0
        top 16px
        width: 22px
        height: 4px
        background-color: #d41e44;
        position: absolute

  &__work
    &_problems
      padding 2rem 3rem
      position: relative
      margin-bottom 2.4rem
      &:before
        content ''
        left 0
        top 0
        width 1rem
        height: 100%
        background: linear-gradient(45deg, #D51935, #4563D0);
        position: absolute
    &_elements
      display flex
      justify-content: flex-start
      align-items: flex-start
    &_element
      color: #2e2e2e;
      font-family: "PT Sans";
      font-size: 2.4rem;
      font-weight: 400;
      position relative
      padding-left 3rem
      margin-right 5rem
      &:last-child
        margin-right 0
      &:before
        content: ''
        top 8px
        left 0
        width 14px
        height: 14px
        border-radius 50%
        background-color: #d41e44;
        position: absolute
  &__forecast
    margin-bottom 8rem
  &__results
    margin-bottom 5rem
    &_content
      display flex
      justify-content: space-between
      align-items: center
    &_img
      width 24%
    &_diagram
      max-width 20rem
      width 100%
      object-fit: cover
    &_arrow
      position: relative
      width 36%
    &_text
      font-family: "PT Sans";
      font-size: 3rem;
      font-weight: 700;
      line-height: 3.6rem;
      margin-bottom 0.8rem
      color #d41e44
      z-index: 1
      position: relative
    &_percents
      color: #4872de;
      font-family: "Arian AMU";
      font-size: 7.2rem;
      font-weight: 700;
      z-index: 1
      position: relative
    &_about
      width 54%
    &_svg
      position: absolute
      top -70px
      left 0
      width 100%
      max-width 29rem
      z-index: 0
      & svg
        width 100%
      & path
        fill black

  &__notification
    position relative
    padding 4rem
    background: #EFF2FC
    &:after
      content ''
      top 3rem
      right 4rem
      max-width 15.6rem
      max-height: 13rem
      height: 100%
      width 100%
      background: url('../images/left-quote.png') center center no-repeat
      background-size cover
      opacity 0.4
      position absolute
      z-index 0
    &_title
      position: relative
      z-index: 1
      color: #2e2e2e;
      font-family: "PT Sans";
      font-size: 3rem;
      font-weight: 700;
      margin-bottom 1.4rem
    &_text
      position: relative
      z-index: 1
      color: #2e2e2e;
      font-family: "PT Sans";
      font-size: 2.4rem;
      font-weight: 400;
      line-height: 3.4rem;
      margin-bottom 2rem
    &_author
      position: relative
      z-index: 1
      text-align: right
    &_name
      display inline-block
      color: #2e2e2e;
      font-family: "PT Sans";
      font-size: 2.4rem;
      font-weight: 700;
      margin-bottom 1rem
      position: relative
      padding-left 5rem
      &:before
        content ''
        width 4rem
        height: 4px
        background: black
        position: absolute
        left 0
        top 14px
    &_post
      opacity: 0.8;
      color: #2e2e2e;
      font-family: "PT Sans";
      font-size: 1.8rem;
      font-weight: 400;


@media (max-width:1440px)
  .projects-detail
    &__algoritms
      &_el
        &:before
          top 12px
    &__work
      &_element
        &:before
          top 6px
    &__notification
      &_name
        &:before
          top 12px
@media (max-width:1280px)
  .projects-detail
    &__algoritms
      &_el
        &:before
          top 10px
          width 16px
    &__work
      &_element
        &:before
          top 4px
    &__results
      &_svg
        top -94px
    &__notification
      &_name
        &:before
          top 10px
@media (max-width:1000px)
  .projects-detail
    &__element
      &_text
        font-size 1.8rem
    &__logo
      margin-bottom 1.8rem
    &__algoritms
      &_title
        font-size 2.4rem
      &_left
        width 56%
      &_right
        width 42%
        padding 4.6rem 2rem
      &_el
        font-size 1.8rem
        &:before
          top 16px
    &__table
      &_th
        font-size 1.8rem
      &_td
        font-size 1.8rem
    &__work
      &_element
        font-size: 1.8rem
    &__results
      &_text
        font-size 2.4rem
      &_percents
        font-size 4.8rem
    &__notification
      padding 3rem
      &_title
        font-size 2.4rem
      &_text
        font-size 1.8rem
      &_name
        &:before
          top 12px
      &:after
        top 3rem
        right 2rem
        max-width: 10rem
        background-size: contain

@media (max-width:667px)
  .projects-detail
    &__header
      display block
      &_left
        width 100%
      &_right
        width 100%
        margin-bottom 1.4rem
    &__logo
      max-width: 16rem
    &__element
      &_title
        font-size 1.6rem
      &_text
        font-size 1.6rem
        &_lh
          line-height 2rem
    &__table
      &_th
        text-align: center
        padding 0.4rem
        font-size 1.2rem
      &_td
        text-align: center
        padding 0.4rem
        font-size 1.2rem
    &__algoritms
      margin-bottom 3.4rem
      &_content
        display block
      &_left
        width 100%
      &_right
        padding 2rem 0.4rem
        width 100%
      &_title
        font-size 1.6rem
        line-height 2.4rem
      &_el
        font-size 1.6rem
        margin-bottom 2rem
        line-height 2rem
        padding-left 2.4rem
        &:before
          top 8px
    &__work
      &_elements
        display block
      &_element
        font-size 1.6rem
        margin-bottom 1.4rem
        &:last-child
          margin-bottom 0
    &__results
      &_content
        flex-wrap wrap
      &_img
        width 40%
      &_about
        width 100%
      &_arrow
        width 50%
      &_text
        font-size 1.6rem
        line-height 2rem
      &_percents
        font-size 4.8rem
    &__notification
      padding 2rem
      &_title
        font-size 1.6em
      &_text
        font-size 1.6rem
        line-height 2.4rem
      &_name
        font-size 1.6rem
        margin-bottom 0.6rem
        &:before
          height: 2px
          top 10px
      &_post
        font-size 1.4rem
      &:after
        top 0rem


