.m-menu
  display none
  position fixed
  top 0
  left 0
  bottom 0
  flex-direction: column
  background-color #2E2E2E
  z-index 20
  padding 3.4rem
  background-image: url('/images/mob-menu-bg.png')
  background-position center bottom
  background-repeat no-repeat
  transition: transform .5s, opacity .5s
  will-change: transform
  transform translateX(-100%)
  opacity 0
  &.active
    opacity 1
    transform translateX(0)
  &__logo
    & svg
      fill white
      height 3.6rem
  &__close
    position absolute
    top 3.8rem
    right 3rem
  &__links
    flex-grow: 1
    display flex
    flex-direction: column
    justify-content space-around
    padding 2rem 0
    max-height: 500px
  &__link
    display block
    color: #ffffff;
    font-family: "PT Sans";
    font-size: 2.6rem;
    font-weight: 400;
    line-height: 6rem;

@media (max-width: 1000px)
  .m-menu
    display flex
    width 50%

@media (max-width: 667px)
  .m-menu
    right 0
    width 100%
