.reviews
  &__heading
    color: #000000;
    font-family: "Arian AMU";
    font-size: 5.4rem;
    font-weight: 700;
  &__zzz
    height 3.1rem
    margin 3rem 0 5rem
  &__block
    padding-top 5.5rem
  &__wrapper
    position relative
    padding 0 2.2rem 3rem
  &__fullname
    color: #2e2e2e;
    font-family: "Arian AMU";
    font-size: 3rem;
    font-weight: 700
    padding-left 15rem
  &__line
    width 100%
    height 0.6rem
    background-image linear-gradient(to right, #5C68C3, #C63545)
  &__avatar
    position absolute
    top 0
    left 0
    transform: translate(-16%, -50%)
    height 16rem
    width 16rem
    border-radius 50%
    background-size: cover
    background-position: center center
    background-repeat no-repeat
  &__position, &__org
    color: #d41e44;
    font-family: "Arian AMU";
    font-size: 1.8rem;
    font-weight: 700;
    font-style: italic;
    text-align center
  &__position
    margin 1.6rem 0 .3rem 0
  &__org
    font-size: 2.6rem
    margin-bottom 1.8em
  &__review
    color: #2e2e2e;
    font-family: "PT Sans";
    font-size: 2.4rem;
    font-style: italic;
