.results
  background #FDFDFD url('./../../images/results-bg.png') center -300px/auto auto no-repeat
  padding-top 26rem
  padding-bottom 5rem
  &__heading
    color: #000000;
    font-family: "Arian AMU";
    font-size: 5.4rem;
    font-weight: 700;
  &__zzz
    height 3.1rem
    margin 1.2rem 0 3.4rem
  &__sub-heading
    color: #000000;
    font-family: "PT Sans";
    font-size: 2.6rem;
    font-weight: 700;
    margin-bottom 6rem
  &__blocks
    display flex
    justify-content space-between
  &__block
    border 8px solid #000
    border-image: url('./../../images/gradient-border.svg') 1;
    flex 0 0 auto
    width calc(100% / 2 - 3rem)
    padding 1rem 1.3rem
    position relative
  &__title
    font-family: "PT Sans";
    color: #d41e44;
    font-size: 2.4rem;
    font-weight: 700;
    font-style: italic;
  &__text
    font-size: 2.4rem;
    font-weight: 400;
    color: #2e2e2e;
    font-family: "PT Sans";
    margin-bottom 1rem
  &__logo
    position absolute
    top 2rem
    right 2.6rem
    height 5rem
  &__results
    display flex
    align-items center
    position relative
    margin-bottom 2rem
  &__graph
    height 7.2rem
  &__upping
    color: #2e2e2e;
    font-family: "PT Sans";
    font-size: 2.4rem;
    font-weight: 400;
    width 22rem
    margin 0 2rem
  &__proc
    color: #4872de;
    font-family: "Arian AMU";
    font-size: 4.8rem;
    font-weight: 700;
  &__arrow
    position absolute
    top -1rem
    right 14%
    height 120%
    opacity 0.1
  &__footer
    display flex
    justify-content space-between
  &__description
    color: #2e2e2e;
    font-family: "PT Sans";
    font-size: 1.8rem;
    font-weight: 400;
    &_bold
      font-weight: 700

@media (max-width: 1000px)
  .results
    padding-top 18rem
    &__heading
      font-size: 3.6rem;
    &__sub-heading
      font-size: 2.4rem;
    &__title, &__text
      font-size: 2.4rem;
    &__block
      width calc(100% / 2 - .5rem)
    &__logo
      height: auto
      width 13rem
      right 1rem
    &__upping
      font-size: 1.8rem;
      margin 0 0.6rem
    &__proc
      font-size: 3.6rem;
    &__description
      font-size: 1.8rem;
      text-align left
    &__footer
      display block
      text-align right

@media (max-width: 667px)
  .results
    padding-top 26rem
    &__heading
      font-size: 3rem;
    &__zzz
      height 2.6rem
      margin 1.4rem 0 2.6rem
    &__sub-heading
      font-size: 1.6rem;
      margin-bottom 2rem
    &__results
      margin 1rem 0
    &__blocks
      display block
    &__block
      width 100%
      margin-bottom 2rem
    &__title, &__text
      font-size: 1.8rem;
    &__logo
      width 40%
    &__upping
      font-size: 1.8rem;
    &__graph
      height 5rem
      margin-left -1rem
    &__proc
      font-size: 2.3rem
    &__description
      font-size: 1.6rem;
